---
interface Props {
    title: string;
    description: string;
    date: string;
    link?: string;
}
const { title, description, date, link } = Astro.props;
---

<div
    class="absolute w-3 h-3 bg-orange-500/90 rounded-full mt-1.5 -start-1.5 border border-white/90 dark:border-gray-900 dark:bg-orange-700"
>
</div>
<time
    class="mb-1 text-sm font-semibold leading-none text-gray-300 dark:text-gray-500"
    >{date}</time
>
<h3 class="text-lg font-semibold text-orange-400/90 dark:text-white mt-2">
    {title}
</h3>
<p
    class="mb-4 text-base font-normal text-gray-400 dark:text-gray-200 text-pretty"
>
    {description}
</p>

{
    link && (
        <a
            href={link}
            class="bg-white/5 
            border border-white/10 rounded-full
            inline-flex justify-center items-center gap-x-2
            py-1 px-2 md:py-2 md:px-4
            text-xs md:text-base
            transition
            hover:scale-110 hover:bg-white/10"
        >
            Saber m√°s ...
            <svg
                class="w-3 h-3 ms-2 rtl:rotate-180"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 14 10"
            >
                <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M1 5h12m0 0L9 1m4 4L9 9"
                />
            </svg>
        </a>
    )
}
